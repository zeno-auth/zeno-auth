<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Zeno Auth{% endblock %}</title>

    {% include 'favicon.html.twig' %}

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="{{ asset('build/vendors.css') }}" />
    <link rel="stylesheet" href="{{ asset('build/web.css') }}" />
</head>
<body>

<header class="fixed-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container justify-content-between">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img height="30" src="{{ asset('assets/images/logo-dark.png') }}" alt="logo" title="logo" />
            </a>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    {% include '@ZenoAuthWeb/user/components/user-control.component.html.twig' %}
                </li>
            </ul>
        </div>
    </nav>
</header>

<div id="content" class="app-body">
    {% block body %}{% endblock %}
</div>

<script type="text/javascript" src="{{ asset('build/manifest.js') }}"></script>
<script type="text/javascript" src="{{ asset('build/vendors.js') }}"></script>
<script type="text/javascript" src="{{ asset('build/user-control.js') }}"></script>
{% block app_scripts %}{% endblock %}
</body>
</html>
